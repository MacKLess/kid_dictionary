<h2>Words to Know</h2>

<% Word.all.each do |entry| %>
<h4><a href="detail/<%= entry %>"><%= entry %></a></h4>
<% end %>

<h4>Add a word to the dictionary:</h4>
<form action="/" method="post">
  <div class="form-group">
  <label for="new_entry">New Word</label>
  <input name="new_entry" id="entry" type="text" class="form-control">
  </div>
  <button type="submit" class="btn">Add!</button>
</form>
